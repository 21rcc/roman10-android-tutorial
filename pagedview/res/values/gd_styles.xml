<resources>

	<style name="TextAppearance">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textColorHighlight">#FFFF9200</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">#5C5CFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="TextAppearance.Large">
		<item name="android:textSize">22sp</item>
	</style>
	<style name="TextAppearance.Medium">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="TextAppearance.Small">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>
	<style name="TextAppearance.Separator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="TextAppearance.TabIndicator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	
	<style name="GreenDroid" />
	<style name="GreenDroid.Widget" />
	
	<style name="GreenDroid.Widget.ItemView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textAppearance">?attr/gdTextAppearance</item>
	</style>

	<!-- Styles for the TextItemView -->
	<style name="GreenDroid.Widget.ItemView.TextItemView">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the LongTextItemView -->
	<style name="GreenDroid.Widget.ItemView.LongTextItemView">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the DescriptionItemView -->
	<style name="GreenDroid.Widget.ItemView.DescriptionItemView">
		<item name="android:textAppearance">?attr/gdTextAppearanceSmall</item>
	</style>
	
		
	<!-- Styles for the SeparatorItemView -->
	<style name="GreenDroid.Widget.ItemView.SeparatorItemView">
		<item name="android:background">#181818</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceSeparator</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<!-- Styles for the DrawableItemView -->
	<style name="GreenDroid.Widget.ItemView.DrawableItemView" />
	<style name="GreenDroid.Widget.ItemView.DrawableItemView.Drawable">
		<item name="android:layout_width">?attr/gdDrawableWidth</item>
		<item name="android:layout_height">?attr/gdDrawableHeight</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
		<item name="android:scaleType">center</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.DrawableItemView.Text">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the ProgressItemView -->
	<style name="GreenDroid.Widget.ItemView.ProgressItemView" />
	<style name="GreenDroid.Widget.ItemView.ProgressItemView.ProgressBar">
		<item name="android:layout_width">?attr/gdProgressBarWidth</item>
		<item name="android:layout_height">?attr/gdProgressBarHeight</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ProgressItemView.Text">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the SubtitleItemView -->
	<style name="GreenDroid.Widget.ItemView.SubtitleItemView" />
	<style name="GreenDroid.Widget.ItemView.SubtitleItemView.Text">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.SubtitleItemView.Subtitle">
		<item name="android:textAppearance">?attr/gdTextAppearanceSmall</item>
	</style>
	
	<!-- Styles for the SubtextItemView -->
	<style name="GreenDroid.Widget.ItemView.SubtextItemView" parent="GreenDroid.Widget.ItemView.SubtitleItemView" />
	<style name="GreenDroid.Widget.ItemView.SubtextItemView.Text" parent="GreenDroid.Widget.ItemView.SubtitleItemView.Text" />
	<style name="GreenDroid.Widget.ItemView.SubtextItemView.Subtext" parent="GreenDroid.Widget.ItemView.SubtitleItemView.Subtitle" />
	
	<!-- Styles for the ThumbnailItemView -->
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView" />
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Text">
		<item name="android:layout_height">?attr/gdItemViewPreferredHalfHeight</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Subtitle">
		<item name="android:layout_height">?attr/gdItemViewPreferredHalfHeight</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceSmall</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Thumbnail">
		<item name="android:layout_width">?attr/gdItemViewPreferredHeight</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
	</style>
	
	<style name="PageIndicator">
		<item name="dotDrawable">@drawable/gd_page_indicator_dot</item>
	</style>

</resources>